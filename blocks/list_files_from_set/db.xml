<?xml version="1.0" encoding="UTF-8"?>
<schema
		xmlns="http://www.concrete5.org/doctrine-xml/0.5"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.concrete5.org/doctrine-xml/0.5 http://concrete5.github.io/doctrine-xml/doctrine-xml-0.5.xsd">
	<table name="btListFilesFromSet">
		<field name="bID" type="integer" size="10">
			<unsigned />
			<key />
		</field>

		<field name="fsID" type="integer" size="12"></field>

		<field name="numberFiles" type="integer" size="12">
			<default value="0"/>
		</field>

		<field name="paginate" type="boolean">
			<default value="1"/>
		</field>

		<field name="forceDownload" type="boolean">
			<default value="1"/>
		</field>

		<field name="fileOrder" type="string" size="20"></field>

		<field name="displaySetTitle" type="boolean">
			<default value="0"/>
		</field>

		<field name="replaceUnderscores" type="boolean">
			<default value="1"/>
		</field>

		<field name="uppercaseFirst" type="boolean">
			<default value="0"/>
		</field>

		<field name="displaySize" type="boolean">
			<default value="1"/>
		</field>

		<field name="displayDateAdded" type="boolean">
			<default value="1"/>
		</field>

		<field name="extension" type="string" size="10"></field>
		<field name="noFilesMessage" type="string" size="255"></field>
		<field name="titleOverride" type="string" size="255"></field>

	</table>
</schema>
